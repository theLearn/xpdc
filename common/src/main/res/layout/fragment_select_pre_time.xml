<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px132">

        <TextView
            android:id="@+id/tv_select_pre_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px60"
            android:paddingRight="@dimen/px60"
            android:text="@string/cancel"
            android:textColor="@color/as_z6"
            android:textSize="@dimen/px36"/>

        <TextView
            android:id="@+id/tv_select_pre_conform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/px60"
            android:paddingRight="@dimen/px60"
            android:text="@string/ok"
            android:textColor="@color/as_z6"
            android:textSize="@dimen/px36"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px15"
        android:background="@color/white"
        android:orientation="horizontal" >

        <com.contrarywind.view.WheelView
            android:id="@+id/select_pre_wheel_day_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:wheelview_textColorCenter = "@color/colorBase"
            app:wheelview_textSize= "@dimen/px42"
            app:wheelview_lineSpacingMultiplier = "3"
            android:layout_weight="3" />

        <com.contrarywind.view.WheelView
            android:id="@+id/select_date_hour_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:wheelview_textColorCenter = "@color/colorBase"
            app:wheelview_textSize= "@dimen/px42"
            app:wheelview_lineSpacingMultiplier = "3"
            android:layout_weight="2" />

        <com.contrarywind.view.WheelView
            android:id="@+id/select_date_minute_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:wheelview_textColorCenter = "@color/colorBase"
            app:wheelview_textSize= "@dimen/px42"
            app:wheelview_lineSpacingMultiplier = "3"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>
