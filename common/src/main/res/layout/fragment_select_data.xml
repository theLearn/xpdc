<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px132">

        <TextView
            android:id="@+id/tv_select_data_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px60"
            android:paddingRight="@dimen/px60"
            android:text="@string/cancel"
            android:textColor="@color/as_z6"
            android:textSize="@dimen/px36"/>

        <TextView
            android:id="@+id/tv_select_data_conform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/px60"
            android:paddingRight="@dimen/px60"
            android:text="@string/ok"
            android:textColor="@color/as_z6"
            android:textSize="@dimen/px36"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px15"
        android:background="@color/white"
        android:orientation="horizontal" >

        <com.chinaums.countryside.view.wheelview.WheelView
            android:id="@+id/select_date_wheel_year_wheel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.chinaums.countryside.view.wheelview.WheelView
            android:id="@+id/select_date_month_wheel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.chinaums.countryside.view.wheelview.WheelView
            android:id="@+id/select_date_day_wheel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
