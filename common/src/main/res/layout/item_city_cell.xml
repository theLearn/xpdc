<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/public_space_value_40"
              android:paddingLeft="@dimen/public_space_value_20"
              android:paddingRight="@dimen/public_space_value_20"
              android:gravity="center_vertical"
              android:background="@color/white"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/iv_city_item"
            android:layout_width="@dimen/public_space_value_10"
            android:layout_height="@dimen/public_space_value_10"
            android:layout_marginRight="@dimen/public_space_value_10"
            android:scaleType="fitXY"
            android:src="@drawable/icon_hot_city"/>

    <TextView
            android:id="@+id/tv_city_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_26"
            android:textSize="@dimen/normal_text_size"/>
</LinearLayout>