<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center_horizontal"
             android:orientation="vertical"
             android:background="@drawable/shape_rectangle_corner">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <com.example.hongcheng.common.view.spinkit.SpinKitView
            android:id="@+id/spin_kit_loading"
            style="@style/SpinKitView.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:indeterminate="true"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/public_space_value_10"
        android:layout_marginBottom="@dimen/public_space_value_20"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/loading"/>

</LinearLayout>