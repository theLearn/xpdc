<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:padding="@dimen/public_space_value_10">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/large_text_size"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/text_black"
                  android:text="短信验证码"/>

        <ImageView android:layout_width="10dp" android:layout_height="10dp"
                   android:src="@mipmap/ic_close"
                   android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/public_space_value_10"
              android:textSize="@dimen/normal_text_size"
              android:layout_gravity="center_horizontal"
              android:textColor="@color/text_gray"
              android:text="验证码已发送至123456789"/>
    <com.xp.dc.xpdc.widget.PayPwdEditText
            android:id="@+id/ppe_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/public_space_value_20"
            android:layout_gravity="center"
            android:background="@null"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="@dimen/normal_text_size"
              android:id="@+id/tv_timer"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/public_space_value_10"
              android:layout_marginBottom="@dimen/public_space_value_10"
              android:textColor="@color/text_gray"
              android:text="60s后重新获取"/>
</LinearLayout>