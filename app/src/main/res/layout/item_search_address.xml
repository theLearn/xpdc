<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:paddingRight="@dimen/public_space_value_20"
              android:paddingLeft="@dimen/public_space_value_20"
              android:paddingBottom="@dimen/public_space_value_10"
              android:paddingTop="@dimen/public_space_value_10"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/iv_search_address_type"
            android:layout_width="@dimen/public_space_value_12"
            android:layout_height="@dimen/public_space_value_12"
            android:src="@mipmap/icon_address_history"
            android:scaleType="fitXY"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_space_value_15"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_search_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>
        <TextView
                android:layout_marginTop="@dimen/public_space_value_5"
                android:id="@+id/tv_search_address_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/text_second_default"/>

    </LinearLayout>


</LinearLayout>
