<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/iv_wait_car_type"
            android:layout_width="@dimen/public_space_value_10"
            android:layout_height="@dimen/public_space_value_10"
            android:src="@mipmap/ic_didi"
            android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/tv_wait_car_type_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_space_value_5"
            android:layout_weight="1"
            android:text="@string/call_car_wait_tip3"
            android:textColor="@color/text_default"
            android:textSize="@dimen/small_text_size"/>

    <TextView
            android:id="@+id/tv_wait_time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_space_value_10"
            android:text="@string/call_car_wait_tip4"
            android:textColor="@color/text_default"
            android:textSize="@dimen/small_text_size"/>

</LinearLayout>
