<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/public_space_value_20"
    android:orientation="vertical">

    <com.example.hongcheng.common.view.searchview.EditText_Clear
        android:id="@+id/et_modify_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_default"
        android:hint="@string/please_input_nick"
        android:paddingBottom="@dimen/public_space_value_10"
        android:paddingTop="@dimen/public_space_value_10"
        android:drawablePadding="@dimen/public_space_value_10"
        android:gravity="start|center_vertical"
        android:singleLine="true"/>

    <include layout="@layout/line_horizontal" />

</LinearLayout>
