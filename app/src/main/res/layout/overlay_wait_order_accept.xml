<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/icon_call_car_wait"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_space_value_15"
            android:text="@string/call_car_wait_tip0"
            android:textColor="@color/text_black_call"
            android:textSize="@dimen/smaller_text_size"/>

    <TextView
            android:id="@+id/tv_wait_order_accept_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_space_value_5"
            android:text="00:15"
            android:textColor="@color/colorBase"
            android:textSize="@dimen/normal_text_size"/>

</LinearLayout>
